#!/bin/env sh

# Dependencies:
# imagemagick
# i3lock-color-git
# maim

IMAGE1=/tmp/i3lock_0.png
IMAGE2=/tmp/i3lock_1.png
FINAL=/tmp/i3lock.png
LOCK=$HOME/bin/lock.png

maim --geometry=1920x1080+0+0 $IMAGE1
maim --geometry=1920x1080+1920+0 $IMAGE2

#convert $IMAGE1 -level 0%,100%,0.6 -blur $BLURTYPE -font Liberation-Sans -pointsize 26 -fill white -gravity center -annotate +0+200 'Type password to unlock' - | composite -gravity center $LOCK - $IMAGE1
#convert $IMAGE2 -level 0%,100%,0.6 -blur $BLURTYPE -font Liberation-Sans -pointsize 26 -fill white -gravity center -annotate +0+200 'Type password to unlock' - | composite -gravity center $LOCK - $IMAGE2
convert $IMAGE1 -scale 10% -scale 1000% -font Liberation-Sans -pointsize 26 -fill white -gravity center -annotate +0+200 'Type password to unlock' - | composite -gravity center $LOCK - $IMAGE1
convert $IMAGE2 -scale 10% -scale 1000% -font Liberation-Sans -pointsize 26 -fill white -gravity center -annotate +0+200 'Type password to unlock' - | composite -gravity center $LOCK - $IMAGE2

# merge images
convert +append $IMAGE1 $IMAGE2 $FINAL

i3lock-color --textcolor=ffffff00 --insidecolor=ffffff1c --ringcolor=ffffff3e --linecolor=ffffff00 --keyhlcolor=00000080 --ringvercolor=00000000 --insidevercolor=0000001c --ringwrongcolor=00000055 --insidewrongcolor=0000001c  -i $FINAL

rm $IMAGE1 $IMAGE2 $FINAL
