[push]
 default          = simple
[core]
 editor           = nvim
[filter "media"]
 required         = true
 clean            = git media clean %f
 smudge           = git media smudge %f
[user]
  name            = Kristof Vannotten
  email           = kristof@vannotten.be
 signingkey       = 2922A5ED
[branch]
  autosetuprebase = always
[color]
  ui              = auto
[color "branch"]
  current         = yellow reverse
  local           = yellow
  remote          = green
[color "diff"]
  meta            = yellow bold
  frag            = magenta bold
  old             = red bold
  new             = green bold
[color "status"]
  added           = yellow
  changed         = blue
  untracked       = cyan

[alias]
 lg               = log --color --graph --pretty=format:'%G?|%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  co              = checkout
  c               = commit
  s               = status -s
