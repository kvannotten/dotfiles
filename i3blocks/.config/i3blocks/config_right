markup=pango

[wallpaper]
command=$HOME/bin/xkcd_wallpaper
interval=once
full_text=

[networkip]
command=$HOME/bin/i3_networkip
interval=30
color=#928474
separator=true

[networkspeed]
command=$HOME/bin/i3_networkspeed
interval=persist
color=#928474
separator=true

[disk]
command=$HOME/bin/i3_disk
interval=30
color=#928474
separator=true

[memory]
command=$HOME/bin/i3_memory
interval=30
color=#928474
separator=true

[cpu]
command=$HOME/bin/i3_cpu
interval=1
color=#928474
separator=true

[temperature]
command=echo "$($HOME/bin/i3_temperature 'Core 0')"
interval=5
color=#928474
separator=true

[time]
command=$HOME/bin/i3_date
interval=1
color=#928474
markup=pango
separator=true
